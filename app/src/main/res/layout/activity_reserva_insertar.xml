<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10dp"
        android:text="@string/InsertarReservaHeader"
        android:textColor="@color/colorAccent"
        android:textSize="35dp" />

    <EditText
        android:id="@+id/editIdReserva"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/InsertarCicloHint1"
        android:inputType="number"
        android:paddingTop="20dp" />

    <EditText
        android:id="@+id/editRecurso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/ReservaHint1"
        android:inputType="time"
        android:paddingTop="20dp" />

    <EditText
        android:id="@+id/editGrupo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/ReservaHint2"
        android:inputType="time"
        android:paddingTop="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="30dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton2"
            android:background="@mipmap/savee"
            android:onClick="insertarReserva"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="limpiarTextoReserva"
            android:text="@string/InsertarCicloButton2"
            style="@style/BotonEstilo" />

    </LinearLayout>


</LinearLayout>
